{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@accessibility-scanner-backend/*": ["apps/*"]
    },
    "outDir": "dist" // Default outDir, can be overridden by apps
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
} 